@model TodoListApplication.Models.TodoListTable

@{
    ViewBag.Title = "新增工作項目";
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
 <h3>新增工作項目</h3>
@using (Html.BeginForm("Create", "TodoList"))
{
    <table>
        <tr>
            <td>
                @Html.LabelFor( model => model.Content )
            </td>
            <td>
                @Html.TextBoxFor( model => model.Content )
                @Html.ValidationMessageFor(model => model.Content)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor( model => model.NeedTime )
            </td>
            <td>
                @Html.TextBoxFor( model => model.NeedTime )
                 @Html.ValidationMessageFor(model => model.NeedTime)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor( model => model.DoneTime )
            </td>
            <td>
                @Html.TextBoxFor( model => model.DoneTime )
                @Html.ValidationMessageFor(model => model.DoneTime)
            </td>
        </tr>
    </table>
    <input type="submit" value="新增工作項目"/>
}
<a href ="@Url.Action("Cancel")">
      <input type="submit" value="取消" /></a>
 
